<%= render 'admin/admin_header' %>

<div class= "container">
  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <div class= "h5 bg-light px-4 mt-4 mb-5" >ジャンル一覧・追加</div>
    </div>
  </div>

  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <label for="name">ジャンル名</label>
      <%= f.text_field :name,placeholder: "ジャンル名", class: "ml-4 mr-4" %>
        <%= f.submit '新規登録', class: "btn btn-success pl-4 pr-4" %>
      <% end %>
    </div>

  <div class= "mt-5 col-lg-4">
    <table class= "table">
      <thead class= "bg-light">
        <tr>
          <th class="pl-5">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>