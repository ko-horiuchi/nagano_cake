<%= render 'admin/admin_header' %>

<div class= "container">
  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <div class= "h5 bg-light px-4 mt-4 mb-5" >ジャンル編集</div>
    </div>
  </div>

  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id), local:true, method: :patch do |f| %>
        <label for="name">ジャンル名</label>
          <%= f.text_field :name, :value => @genre.name, class: "ml-4 mr-4" %>
          <%= f.submit '変更を保存', class: "btn btn-success pl-4 pr-4"  %>
      <% end %>
    </div>
  </div>
</div>
