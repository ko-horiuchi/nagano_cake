<%= render 'admin/admin_header' %>

<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
  <table>
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>フリガナ</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th>電話番号</th>
        <th>メールアドレス</th>
        <th>会員ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <td><%= @customer.id %></td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      <td><%= @customer.postal_code %></td>
      <td><%= @customer.address %></td>
      <td><%= @customer.telephone_number %></td>
      <td><%= @customer.email %></td>
    </tbody>
  </table>

  <%= link_to "編集する", edit_admin_customer_path(@customer) %>
  <%= link_to "注文履歴一覧を見る", edit_admin_customer_path(@customer) %>