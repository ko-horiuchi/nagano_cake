<%= render 'admin/admin_header' %>

<h3>注文履歴一覧</h3>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.customer.name %></td>
          <td><%= order.cart_item.amount %></td>
          <td><%= order.order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
