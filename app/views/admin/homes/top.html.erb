<%= render 'admin/admin_header' %>

<div class= "container">
  <div class= "row">
    <div class= "col-lg-8 mx-auto">
      <div class="d-flex justify-content-start">
        <div class= "h4 bg-light px-4" >注文履歴一覧</div>
      </div>

      <table class="table">
        <thead class="bg-light">
          <tr>
            <th scope="col">購入日時</th>
            <th scope="col">購入者</th>
            <th scope="col">注文個数</th>
            <th scope="col">注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order.id), class: 'text-dark' %></td>
              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
              <td><% order.order_details.each do |order_detail| %><%= order_detail.amount %><% end %></td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class= "row col-lg-12 d-flex justify-content-center">
    <%= paginate @orders %>
  </div>
</div>
