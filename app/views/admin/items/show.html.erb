<%= render 'admin/admin_header' %>

<div class= "container">
  <div class= "row">
    <div class= "mx-auto col-lg-8 d-flex justify-content-start">
      <div class= "h5 bg-light px-4" >商品詳細</div>
    </div>
  </div>

  <div class= "row">
    <div class="col-lg-4 d-flex align-items-center justify-content-center">
      <%= attachment_image_tag @item, :image, :fill, 250, 150, format: 'jpeg' %>
    </div>

    <div class="col-lg-8" >
  <table class="table table-borderless">
    <tbody>
      <tr>
        <td style="width:200px;">商品名</td>
        <td scope="col"><%= @item.name %></td>
      </tr>
      <tr>
        <td scope="col">商品説明</td>
        <td scope="col"><%= @item.introduction %></td>
      </tr>
       <tr>
        <td scope="col">ジャンル</td>
        <td scope="col"><%= @item.genre_id %></td>
      </tr>
      <tr>
        <td scope="col">税込価格</br>(税抜き価格)</td>
        <td scope="col"><% price = @item.price * 1.1 %><%= price.round.to_s(:delimited)  %> (<%= @item.price.to_s(:delimited)  %>)円</td>
      </tr>
       <tr>
        <td scope="col">販売ステータス</td>
        <td scope="col"><% if @item.is_active == true %>
                          <p class="text-success">販売中</p>
                        <% else %>
                          <p class="text-muted">販売停止中</p>
                        <% end %>
        </td>
      </tr>
      <tr><td class= "float-right"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg" %></td></tr>
      </div>
    </tbody>
  </table>
</div>