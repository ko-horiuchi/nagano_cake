<%= render 'admin/admin_header' %>

<h1>商品詳細ページ</h1>
  <table>
    <tbody>
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %>
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>税込価格(税抜き価格)</td>
        <td><% price = @item.price * 1.1 %><%= price.round.to_s(:delimited)  %> (<%= @item.price.to_s(:delimited)  %>)</td>
        <td><%= link_to "編集", edit_admin_item_path(@item) %></td>
      </tr>
      </tr>
    </tbody>
  </table>


