<%= render 'admin/admin_header' %>

<div class= "container">
  <div class= "row">
    <div class= "mx-auto col-lg-8 d-flex justify-content-start">
      <div class= "h4 bg-light px-4" >商品一覧</div>
    </div>
  </div>

  <div class= "row">
    <div class= "col-lg-10 d-flex justify-content-end">
      <div class= "h3 border rounded-circle">
        <%= link_to '＋', new_admin_item_path, class: 'text-dark' %>
      </div>
    </div>
  </div>

  <div class= "row">
    <div class= "col-lg-8 mx-auto">
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th scope="col">商品ID</th>
              <th scope="col">商品名</th>
              <th scope="col">ジャンル</th>
              <th scope="col">税抜き価格</th>
              <th scope="col">ステータス</th>
            </tr>
          </thead>

          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td>
                  <%= link_to admin_item_path(item.id) do %>
                    <div class= 'text-dark'><%= item.name %></div>
                  <% end %>
                </td>

                <td><%= item.genre ? item.genre.name : 'なし' %></td>
                <td><%= item.price.to_s(:delimited)  %></td>
                <td><% if item.is_active == true %>
                      販売中
                    <% else %>
                      販売中止
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
  <div class= "row col-lg-12 d-flex justify-content-center">
    <%= paginate @items %>
  </div>
</div>