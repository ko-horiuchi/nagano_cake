<%= render 'admin/admin_header' %>

<h3>商品一覧</h3>
<%= link_to '＋', new_admin_item_path %>

  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>ジャンル</th>
        <th>税抜き価格</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited)  %></td>
          <td><% if item.is_active == true %>
                販売中
              <% else %>
                販売中止
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>