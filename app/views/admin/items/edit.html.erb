<%= render 'admin/admin_header' %>

<h2>商品編集</h2>

  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
    <label for="image_id">商品画像</label>
    <%= f.attachment_field :image %></br>
    <label for="name">商品名</label>
    <%= f.text_field :name,placeholder: "商品名" %></br>
    <label for="introduction">商品説明</label>
    <%= f.text_area :introduction,placeholder: "ここに説明文を記述します" %></br>
    <label for="genre_id">ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %></br>
    <label for="price">税抜き価格</label>
    <%= f.text_field :price %></br>
    <label>販売ステータス</label>
    <%= f.radio_button :is_active, true %>販売中<%= f.radio_button :is_active, false %>販売停止</br>
    <%= f.submit '変更を保存' %>
  <% end %>