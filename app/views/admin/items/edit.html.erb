<h1>商品編集ページ</h1>
  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
    <label for="name">商品名</label></br>
    <%= f.text_field :name %></br>
    <label for="introduction">商品説明</label></br>
    <%= f.text_area :introduction %></br>
    <label for="price">税抜き価格</label></br>
    <%= f.text_field :price %></br>
    <label>商品画像</label></br></br>
    <%= f.submit '商品編集' %>
  <% end %>
  
    <p><%= link_to "詳細画面に戻る", admin_item_path %>|<%= link_to "商品一覧に戻る", admin_items_path %></p>