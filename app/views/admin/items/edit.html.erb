<%= render 'admin/admin_header' %>

<h2>商品編集</h2>
  <%= form_with model: @item, url: admin_item_path, local:true do |f| %>
    <label for="image_id">商品画像</label>
    <%= f.attachment_field :image %></br>
    <label for="name">商品名</label>
    <%= f.text_field :name %></br>
    <label for="introduction">商品説明</label>
    <%= f.text_area :introduction %></br>
    <label for="price">税抜き価格</label>
    <%= f.text_field :price %></br>
    <label>販売ステータス</label></br></br>
    <%= f.submit '変更を保存' %>
  <% end %>

