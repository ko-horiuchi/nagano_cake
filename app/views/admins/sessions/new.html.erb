<%= render 'admin/admin_header' %>

<div class= "container">
  <div class= "row">
    <div class= "mx-auto col-lg-8 d-flex justify-content-start">
      <div class= "h5 bg-light px-4" >管理者ログイン</div>
    </div>
  </div>


  <div class= "row">
    <div class= "col-lg-4 mx-auto">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field d-flex justify-content-between">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com" %>
        </div></br>
        <div class="field d-flex justify-content-between">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div></br>
        <div class="actions d-flex justify-content-center">
          <%= f.submit "ログイン", class: "btn btn-primary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>