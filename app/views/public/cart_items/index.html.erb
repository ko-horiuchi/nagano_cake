<%= render 'public/public_header' %>

<h1>ショッピングカート</h1>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.price %></td>
          <td><%= form_with model: cart_item ,url: cart_items_path, local:true  do |f| %>
                <%= f.hidden_field :item_id, :value => cart_item.item.id %>
                <%= f.number_field :amount, value: cart_item.amount,min: 1, max: 100, include_blank: "個数選択" %>
                <%= f.submit 'カートに入れる'%>
              <% end %>
          </td>
          <td><%= cart_item.item.price * cart_item.amount %></td>
          <td><%= link_to '削除する', cart_item, method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= button_to "カートを空にする", cart_item_destroy_all_path, method: :delete %>