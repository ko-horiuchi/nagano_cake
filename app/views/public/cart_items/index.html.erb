<h1>カート内商品</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>商品名</th>
        <th>税抜き価格</th>
        <th>数量</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td>
            <%= link_to public_item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.amount %></td>
        </tr>
      <% end %>
    </tbody>
  </table>