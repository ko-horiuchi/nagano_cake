<%= render 'public/public_header' %>

<div class= "container">
  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <div class= "h5 bg-light px-4" >配送先編集</div>
    </div>
  </div>

  <div class= "row">
    <div class= "col-lg-6 d-flex justify-content-start">
      <%= form_with model: @address, url: address_path, local:true do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td scope="col">郵便番号(ハイフンなし)</td>
              <td scope="col"><%= f.text_field :postal_code %></td>
            </tr>
             <tr>
              <td scope="col">住所</td>
              <td scope="col"><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td scope="col">宛名</td>
              <td scope="col"><%= f.text_field :name %></td>
            </tr>
              <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>

