<h1>配送先一覧</h1> 
  <table>
    <thead>
      <tr>
        <th></th>
        <th>宛名</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= link_to public_address_path(address.id) do %>
            <%= address.name %>
            <% end %>
          </td>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
