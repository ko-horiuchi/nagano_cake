<h1>配送先一覧</h1>
  <table>
    <thead>
      <tr>
        <th>宛名</th>
        <th>郵便番号</th>
        <th>住所</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= link_to public_address_path(address.id) do %>
            <%= address.name %>
            <% end %>
          </td>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= link_to "編集", edit_public_address_path(@item.id) %></td>
          <td><%= link_to '削除', public_addresses_path, method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>新規配送先登録</h2>
  <%= form_with model: @address, url: public_addresses_path, local:true do |f| %>
    <label for="name">宛名</label></br>
    <%= f.text_field :name %></br>
    <label for="name">〒</label></br>
    <%= f.text_field :postal_code %></br>
    <label for="name">住所</label></br>
    <%= f.text_field :address %></br>
    <%= f.submit '登録' %>
  <% end %>