<%= render 'public/public_header' %>

<h2>注文情報入力</h2>
  <%= form_with url:orders_confirm_path, method: :post, local: true do | f | %>

    <h2>支払方法</h2>
      <%= f.radio_button :payment_method, 0 %>
      <%= f.label :payment_method, 'クレジットカード' %></br>
      <%= f.radio_button :payment_method, 1 %>
      <%= f.label :payment_method, '銀行振込' %></br>

    <h2>お届け先</h2>
      <%= f.radio_button :customer, 0 %>
      <%= f.label :customer, 'ご自身の住所' %></br>
      <%= customer.postal_code %><%= customer.address %></br>
      <%= customer.last_name %><%= customer.first_name %></br>

      <%= f.radio_button :address, 1 %>
      <%= f.label :address, '登録済み住所から選択' %></br>
      <%= f.select :address, [["登録1","登録1"],["登録2","登録2"]] %>

      <%= f.radio_button :address, 2 %>
      <%= f.label :address, 'お新しいお届け先' %></br>
      <label for="postal_code">郵便番号（ハイフンなし）</label>
      <%= f.text_area :postal_code,placeholder: "0000000" %>
      <label for="address">住所</label>
      <%= f.text_area :address,placeholder: "東京都渋谷区代々木神園町0-0" %>
      <label for="name">宛名</label>
      <%= f.text_area :name,placeholder: "令和道子" %>

  <%= f.submit '確認画面に進む' %>
  <% end %>