<%= render 'public/public_header' %>

<div class= "container">
  <div class= "row mt-3 mb-3">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <div class= "h5 bg-light px-4" >注文履歴詳細</div>
    </div>
  </div>

<div class= "row">
  <div class= "col-lg-7">
    <div class="h6">注文情報</div>
      <table class= "table table-bordered">
        <tr>
          <td class= "bg-light">注文日</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td class= "bg-light">配送先</td>
          <td>〒<%= @order.postal_code %> <%= @order.address %> <%= @order.name %></td>
        </tr>
        <tr>
          <td class= "bg-light">支払方法</td></td>
          <td><%= @order.payment_method %></td>
        </tr>
         <tr>
          <td class= "bg-light">ステータス</td>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>

  <div class= "col-lg-5">
    <div class="h6">請求情報</div>
      <table class= "table table-bordered">
        <tr>
          <td class= "bg-light">商品合計</td>
          <td><% @order.order_details.each do |order_detail| %>
                  <%  total_price = [order_detail.amount * order_detail.item.price] %>
                  <%= total_price.sum %>円
                <% end %></td>
        </tr>
        <tr>
          <td class= "bg-light">配送料</td>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th class= "bg-light">ご請求額</td>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class= "row ">
    <div class= "col-lg-8">
      <div class="h6">注文内容</div>
      <table class="table table-bordered">
        <thead class = "bg-light">
          <tr>
            <th colspan="3">商品</th>
            <th scope="col">単価(税抜)</th>
            <th scope="col">個数</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% total_price = 0 %>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td colspan="3"><%= order_detail.item.name %></td>
            <td scope="col"><%= order_detail.item.price %></td>
            <td scope="col"><%= order_detail.amount %></td>
            <td scope="col"><%= order_detail.amount * order_detail.item.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
