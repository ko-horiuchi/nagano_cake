<%= render 'public/public_header' %>

<div><strong><font size = "6">商品一覧</font></strong>全<%= Item.count %>件</div>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <tb><%= attachment_image_tag item, :image, :fill, 200, 200, format: 'jpeg' %></tb>
          <td>
            <%= link_to item_path(item.id) do %>
            <%= item.name %>
            <% end %>
          </td>
          <td>¥<%= item.price.to_s(:delimited) %></td>
        </tr>
      <% end %>
    </tbody>
    
<%= paginate @items %>