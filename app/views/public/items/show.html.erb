<%= render 'public/public_header' %>

<h1>商品詳細</h1>
  <%= form_with model: @cart_item ,url: cart_items_path, local:true  do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>商品名</th>
        <th>商品説明</th>
        <th>税抜き価格</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
          <td><%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg' %></td>
          <td><%= @item.name %></td>
          <td><%= @item.introduction %></td>
          <td><%= @item.price %></td>
          <td><%= f.number_field :amount, min: 1, max: 100, include_blank: "個数選択" %></td>
          <td><%= f.submit 'カートに入れる'%></td>
      </tr>
    </tbody>
  </table>
  <% end %>

    <p><%= link_to "商品一覧に戻る", items_path %></p>