<%= render 'public/public_header' %>

<div class= "container">
  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <div class= "h5 bg-light px-4" >新規会員登録</div>
    </div>
  </div>

  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td style="width:200px;">名前</td>
              <td scope="col"><%= f.label :"(姓)", class: "mr-3" %><%= f.text_field :last_name, autofocus: true,placeholder: "令和", class: "mr-4" %><%= f.label :"(名)", class: "mr-3" %><%= f.text_field :first_name, autofocus: true,placeholder: "道子" %></td>
            </tr>
            <tr>
              <td scope="col">フリガナ</td>
              <td scope="col"><%= f.label :"(セイ)" %><%= f.text_field :last_name_kana, autofocus: true,placeholder: "レイワ", class: "mr-4" %><%= f.label :"(メイ)" %><%= f.text_field :first_name_kana, autofocus: true,placeholder: "ミチコ" %></td>
            </tr>
             <tr>
              <td scope="col">メールアドレス</td>
              <td scope="col"><%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com", class: "ml-5" %></td>
            </tr>
            <tr>
              <td scope="col">郵便番号(ハイフンなし)</td>
              <td scope="col"><%= f.text_field :postal_code, autofocus: true,placeholder: "0000000", class: "ml-5" %></td>
            </tr>
             <tr>
              <td scope="col">住所</td>
              <td scope="col"><%= f.text_field :address, autofocus: true,placeholder: "東京都渋谷区代々木神園町0-0", class: "ml-5", :size=>"50" %></td>
            </tr>
             <tr>
              <td scope="col">電話番号(ハイフンなし)</td>
              <td scope="col"><%= f.text_field :telephone_number, autofocus: true,placeholder: "0000000000", class: "ml-5" %></td>
            </tr>
             <tr>
              <td scope="col">パスワード(6文字以上)</td>
              <td scope="col"><% if @minimum_password_length %><% end %><%= f.password_field :password, autocomplete: "new-password", class: "ml-5" %></td>
            </tr>
            <tr>
              <td scope="col">パスワード(確認用)</td>
              <td scope="col"><%= f.password_field :password_confirmation, class: "ml-5" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>

  <div class= "row">
    <div class= "mx-auto col-lg-12 d-flex justify-content-start">
      <div class= "h5 bg-light px-4" >既に登録済みの方</div>
    </div>
      <div class= "col-lg-10 d-flex justify-content-between">
        <div><%= link_to "こちら   ", new_customer_session_path %>からログインしてください。 </div>
      </div>
  </div>
</div>